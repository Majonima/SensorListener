<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.majonima.sensorapk.MainActivity"
    tools:showIn="@layout/activity_main"
    android:onClick="onclick">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp">
            <TextView
                android:text="Acceleration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/accel"
                android:textSize="14dp"
                android:paddingBottom="15dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp">
            <TextView
                android:text="XY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/xyTextValue"
                android:textSize="14sp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/xyValue"
                android:textSize="14sp"
                android:paddingBottom="15dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp">
            <TextView
                android:text="XZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/xzTextValue"
                android:textSize="14sp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />
            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xyValue"
                android:layout_alignEnd="@+id/xyValue"
                android:id="@+id/xzValue"
                android:textSize="14sp"
                android:paddingBottom="15dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp">
            <TextView
                android:text="ZY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/zyTextValue"
                android:textSize="14sp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />
            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xzValue"
                android:layout_alignStart="@+id/xzValue"
                android:id="@+id/zyValue"
                android:textSize="14sp"
                android:paddingBottom="15dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp">
            <TextView
                android:text="Location"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/loc"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:paddingBottom="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp">
            <TextView
                android:text="Latitude"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/gpsTextValueLat"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />
            <TextView
                android:text="Latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/gpsValueLat"
                android:id="@+id/gpsValueLat"
                android:textSize="14sp"
                android:paddingBottom="15dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp">
            <TextView
                android:text="Longitude"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/gpsTextValueLong"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:paddingRight="15dp"
                android:paddingBottom="29dp" />
            <TextView
                android:text="Longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xzValue"
                android:layout_alignStart="@+id/gpsValueLong"
                android:id="@+id/gpsValueLong"
                android:textSize="14sp"
                android:paddingBottom="29dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp">

            <TextView
                android:text="Noise lvl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/noiseTextValue"
                android:textSize="14sp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:text="noiseValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/noiseTextValue"
                android:id="@+id/noiseValue"
                android:textSize="14sp"
                android:paddingBottom="15dp" />
        </TableRow>

    </TableLayout>
</RelativeLayout>



